{
  "name": "react-counter-app",
  "version": "1.0.0",
  "description": "Simple React Counter App without build tools",
  "main": "index.html",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "bunx babel src --out-dir dist --presets @babel/preset-react",
    "dev": "bun run build && bun --port 3000 --serve .",
    "start": "bun run dev"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.0",
    "@babel/preset-react": "^7.22.0"
  },
  "keywords": ["react", "counter", "babel", "no-build-tools"],
  "author": "",
  "license": "MIT"
}