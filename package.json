{
  "name": "react-counter-app",
  "version": "1.0.0",
  "description": "Simple React Counter App without build tools",
  "main": "index.html",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "pnpm --package=@babel/cli dlx babel src --out-dir dist --presets @babel/preset-react",
    "dev": "pnpm run build && pnpx serve . -p 3000",
    "start": "pnpm run dev"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "serve": "^14.2.0"
  },
  "keywords": ["react", "counter", "babel", "no-build-tools", "pnpm"],
  "author": "",
  "license": "MIT"
}